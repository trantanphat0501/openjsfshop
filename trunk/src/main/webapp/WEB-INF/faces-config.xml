<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">

    <application>

        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>de</supported-locale>
        </locale-config>

        <message-bundle>
            com.com.openshop.locale
        </message-bundle>

    </application>
    <navigation-rule>
        <navigation-case>
            <from-outcome>stepDatabase</from-outcome>
            <to-view-id>/install/stepDatabase.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/articleManager.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>newArticle</from-outcome>
            <to-view-id>/admin/newArticle.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>showArticleManagement</from-outcome>
            <to-view-id>/admin/articleManager.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>showAddArticle</from-outcome>
            <to-view-id>/admin/newArticle.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>