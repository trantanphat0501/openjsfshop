<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.openshop.dao.mappings.admincp.Login">

    <select id="checkAdminLogin" parameterType="com.openshop.beans.UserBean" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM user
        WHERE email = #{email}
        AND level = 2
        AND password = MD5(#{password})
    </select>

</mapper>